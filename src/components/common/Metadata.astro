---
import merge from 'lodash.merge';
import { AstroSeo } from '@astrolib/seo';

import type { Props as AstroSeoProps } from '@astrolib/seo';

import { SITE, METADATA, I18N } from 'astrowind:config';
import type { MetaData } from '~/types';
import { getCanonical } from '~/utils/permalinks';
import { getRelativeLocaleUrl } from 'astro:i18n';

import { adaptOpenGraphImages } from '~/utils/images';

export interface Props extends MetaData {
  dontUseTitleTemplate?: boolean;
}

const {
  title,
  ignoreTitleTemplate = false,
  canonical = String(getCanonical(String(Astro.url.pathname))),
  robots = {},
  description,
  openGraph = {},
  twitter = {},
} = Astro.props;

const seoProps: AstroSeoProps = merge(
  {
    title: '',
    titleTemplate: '%s',
    canonical: canonical,
    noindex: true,
    nofollow: true,
    description: undefined,
    openGraph: {
      url: canonical,
      site_name: SITE?.name,
      images: [],
      locale: I18N?.language || 'en',
      type: 'website',
    },
    twitter: {
      cardType: openGraph?.images?.length ? 'summary_large_image' : 'summary',
    },
  },
  {
    title: METADATA?.title?.default,
    titleTemplate: METADATA?.title?.template,
    noindex: typeof METADATA?.robots?.index !== 'undefined' ? !METADATA.robots.index : undefined,
    nofollow: typeof METADATA?.robots?.follow !== 'undefined' ? !METADATA.robots.follow : undefined,
    description: METADATA?.description,
    openGraph: METADATA?.openGraph,
    twitter: METADATA?.twitter,
  },
  {
    title: title,
    titleTemplate: ignoreTitleTemplate ? '%s' : undefined,
    canonical: canonical,
    noindex: typeof robots?.index !== 'undefined' ? !robots.index : undefined,
    nofollow: typeof robots?.follow !== 'undefined' ? !robots.follow : undefined,
    description: description,
    openGraph: { url: canonical, ...openGraph },
    twitter: twitter,
  }
);

// Generate hreflang links for multilingual SEO
const currentLocale = Astro.currentLocale || 'sv';
const locales = ['sv', 'en'];
let cleanPathname = Astro.url.pathname;

// Remove base path if present
const basePath = SITE.base || '';
if (basePath && cleanPathname.startsWith(basePath)) {
  cleanPathname = cleanPathname.slice(basePath.length) || '/';
}

// Remove locale prefix for current non-default locale
if (currentLocale !== 'sv' && cleanPathname.startsWith(`/${currentLocale}`)) {
  cleanPathname = cleanPathname.slice(`/${currentLocale}`.length) || '/';
}

const additionalLinkTags = locales.map(locale => ({
  rel: 'alternate',
  hreflang: locale === 'sv' ? 'sv-SE' : 'en',
  href: getCanonical(Astro.site?.origin + getRelativeLocaleUrl(locale, cleanPathname))
}));
---

<AstroSeo {...merge(seoProps, {
  additionalLinkTags,
  openGraph: await adaptOpenGraphImages(seoProps?.openGraph, Astro.site)
})} />
