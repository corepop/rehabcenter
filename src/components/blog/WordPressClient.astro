---
export interface Props {
  postsLimit?: number;
}

const { postsLimit = 10 } = Astro.props;

// WordPress API endpoint
const wpApiUrl = 'https://blogg.rygg.nu/wp-json/wp/v2/posts?per_page=' + postsLimit + '&_embed';
---

<section class="px-6 py-12 sm:py-16 lg:py-20">
  <div class="mx-auto max-w-7xl">
    <!-- Loading State -->
    <div id="wordpress-blog-loading" class="text-center py-16">
      <div class="animate-spin rounded-full h-32 w-32 border-b-2 border-blue-600 mx-auto mb-4"></div>
      <p class="text-xl text-gray-600">Laddar blogginlägg...</p>
      <p class="text-sm text-gray-500 mt-2">Hämtar innehåll från WordPress</p>
    </div>

    <!-- Blog Posts Container -->
    <div id="wordpress-blog-container" class="hidden">
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading dark:text-slate-300">
          Blogg
        </h1>
        <p class="text-lg md:text-xl text-muted max-w-3xl mx-auto mt-4">
          Praktiska råd, övningar och fördjupningar om vanliga besvär i rygg, nacke, axlar, knän och fötter.
        </p>
      </div>

      <div id="wordpress-blog-posts" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Posts will be inserted here via JavaScript -->
      </div>

      <!-- Pagination/Loading More -->
      <div id="wordpress-blog-footer" class="text-center mt-12">
        <!-- Additional controls can go here -->
      </div>
    </div>

    <!-- Error State -->
    <div id="wordpress-blog-error" class="hidden text-center py-16">
      <div class="text-red-500 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 012 0v4a1 1 0 11-2 0V9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Kunde inte ladda blogginlägg</h2>
      <p class="text-gray-600 mb-4">Ett fel uppstod när innehåll skulle hämtas från WordPress.</p>
      <button
        onclick="loadWordPressPosts()"
        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded-lg transition-colors"
      >
        Försök igen
      </button>
    </div>
  </div>
</section>

<script define:vars={{ wpApiUrl }}>
  async function loadWordPressPosts(page = 1) {
    const loadingEl = document.getElementById('wordpress-blog-loading');
    const containerEl = document.getElementById('wordpress-blog-container');
    const errorEl = document.getElementById('wordpress-blog-error');
    const postsEl = document.getElementById('wordpress-blog-posts');

    if (!loadingEl || !containerEl || !errorEl || !postsEl) return;

    try {
      // Show loading
      loadingEl.classList.remove('hidden');
      containerEl.classList.add('hidden');
      errorEl.classList.add('hidden');

      const apiUrl = `${wpApiUrl}&page=${page}&_embed`;
      console.log('Fetching WordPress posts from:', apiUrl);

      const response = await fetch(apiUrl);

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const posts = await response.json();

      // Render posts
      renderPosts(posts);

      // Hide loading, show content
      loadingEl.classList.add('hidden');
      containerEl.classList.remove('hidden');

    } catch (error) {
      console.error('Error loading WordPress posts:', error);

      // Hide loading, show error
      loadingEl.classList.add('hidden');
      errorEl.classList.remove('hidden');
    }
  }

  function renderPosts(posts) {
    const postsEl = document.getElementById('wordpress-blog-posts');
    if (!postsEl) return;

    postsEl.innerHTML = '';

    posts.forEach((post) => {
      const postDate = new Date(post.date);
      const formattedDate = postDate.toLocaleDateString('sv-SE', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      });

      // Get featured image if available
      const featuredImage = post._embedded?.['wp:featuredmedia']?.[0];

      // Clean up excerpt (remove HTML tags)
      const cleanExcerpt = post.excerpt.rendered
        .replace(/<[^>]*>/g, '')
        .trim()
        .substring(0, 200) + '...';

      // Create post article
      const postElement = document.createElement('article');
      postElement.className = 'mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade';

      postElement.innerHTML = `
        ${featuredImage ? `
          <div class="relative md:h-64 bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6">
            <img
              src="${featuredImage.source_url}"
              alt="${featuredImage.alt_text || post.title.rendered}"
              class="w-full md:h-full object-cover rounded shadow-lg bg-gray-400 dark:bg-slate-700"
              loading="lazy"
            />
          </div>
        ` : ''}

        <h3 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
          <a
            class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200"
            href="${post.link}"
            target="_blank"
            rel="noopener noreferrer"
          >
            ${post.title.rendered}
          </a>
        </h3>

        <p class="text-muted dark:text-slate-400 text-lg mb-2">${cleanExcerpt}</p>

        <div class="flex items-center text-sm text-gray-500 dark:text-slate-400">
          <time datetime="${post.date}" class="mr-4">
            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            ${formattedDate}
          </time>
          <a
            href="${post.link}"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium"
          >
            Läs mer →
          </a>
        </div>
      `;

      postsEl.appendChild(postElement);
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    loadWordPressPosts(1);
  });

  // Expose function globally for error retry button
  window.loadWordPressPosts = loadWordPressPosts;
</script>
