---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BookingIntegration from '~/components/widgets/BookingIntegration.astro';

const metadata = {
  title: 'Enköpings Rehabcenter — Snabb smärtlindring med expertis inom naprapati och sjukgymnastik!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Boka tid',
        href: '#booking',
        icon: 'tabler:calendar',
      },
      { text: 'Läs mer', href: '#features' },
    ]}
    image={{ src: '~/assets/images/tree.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Möt en expert inom <span class="hidden xl:inline">smärtlindring, </span>
      <span class="text-accent text-blue-600"> Naprapati och Sjukgymnastik</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Enköpings Rehabcenter</span> hjälper dig snabbt med smärtan!
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Vi har akuttider!</span>
      Genom att kombinera naprapat– och sjukgymnastbehandling uppnår vi bästa resultat för att du ska slippa ha ont.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="200kr:" description="Landstingstaxa och Frikort gäller" />

  <!-- Personal Introduction Widget *** -->
  <Content
    title="Om Experten"
    name="Johny Åhman"
    subtitle="Naprapat och Legitimerad Sjukgymnast"
    items={[
      {
        title: 'Johny Åhman',
        description:
          'Med över 35 års erfarenhet. Han har dessutom utbildat sig till OMT steg 3, där varje steg tar 3 terminer. Han har gått specialkurser vad gäller axel, knä, och fotbesvär. Han har dessutom intresserat sig för yrsel och huvudvärk.',
      },
    ]}
    image={{
      src: '~/assets/images/johny.webp',
      alt: 'Johny Åhman',
    }}
  />

  <!-- Booking Integration Widget **** -->

  <BookingIntegration
    id="booking"
    height="700px"
    className="max-w-4xl mx-auto"
    title="Boka tid online"
    subtitle="Enkelt och snabbt - välj den tid som passar dig bäst"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BookingIntegration>

