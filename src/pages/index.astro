---
export const prerender = true;

import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import PersonalIntroduction from '~/components/widgets/PersonalIntroduction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BookingIntegration from '~/components/widgets/BookingIntegration.astro';


const metadata = {
  title: 'Enköpings Rehabcenter — Personlig vård inom naprapati och sjukgymnastik i Enköping',
  description:
    'Välkommen! Jag heter Johny Åhman, naprapat och legitimerad sjukgymnast med över 35 års erfarenhet. Jag erbjuder personlig och evidensbaserad behandling för smärta och besvär i rygg, nacke, axlar, knän, fötter m.m. Boka enkelt tid online.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Boka tid',
        href: '#booking',
        icon: 'tabler:calendar',
      },
      { text: 'Läs mer om mig', href: '#om-mig' },
    ]}
    image={{ src: '~/assets/images/johny.jpg', alt: 'Johny Åhman – Enköpings Rehabcenter' }}
  >
    <Fragment slot="title">
      Hej, jag heter Johny Åhman – <span class="hidden xl:inline">naprapat och </span><span
        class="text-accent text-blue-600">legitimerad sjukgymnast</span
      > i Enköping
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Akuttider finns!</span>
      <span class="hidden sm:inline"
        ><span class="font-semibold">Välkommen till Enköpings Rehabcenter.</span> Jag hjälper dig snabbt med smärta i rygg,
        nacke, axlar, knän och fötter.</span
      >
      Med över 35 års erfarenhet kombinerar jag naprapati och sjukgymnastik för att du ska bli smärtfri så snabbt som möjligt.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="200kr:" description="Landstingstaxa och Frikort gäller" />

  <!-- Personal Introduction Widget *** -->
  <PersonalIntroduction
    id="om-mig"
    title="Möt din naprapat och sjukgymnast"
    subtitle="Specialist inom smärtlindring och rehabilitering"
    name="Johny Åhman"
    bio={`Jag brinner för att hjälpa människor tillbaka till en smärtfri och aktiv vardag. Med över 35 års erfarenhet erbjuder jag personlig, trygg och evidensbaserad vård.
  <ul class="list-disc ml-5 mt-3 space-y-1">
    <li>OMT steg 3 (ortopedisk manuell terapi)</li>
    <li>Särskild kompetens för axel-, knä- och fotbesvär</li>
    <li>Intresse och erfarenhet av yrsel och huvudvärk</li>
  </ul>`}
    image={{
      src: '~/assets/images/undersokning.jpg',
      alt: 'Undersökning av patient',
    }}
  />

  <!-- Booking Integration Widget **** -->

  <BookingIntegration
    id="booking"
    height="700px"
    className="max-w-4xl mx-auto"
    title="Boka tid online"
    subtitle="Enkelt och snabbt - välj den tid som passar dig bäst"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BookingIntegration>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Vad mina patienter säger"
    subtitle="Läs om erfarenheter från patienter i Enköping som har fått hjälp med sina besvär"
    testimonials={[
      {
        title: 'Fantastisk hjälp med ryggsmärta',
        testimonial:
          'Efter år av ryggsmärta som begränsade min vardag sökte jag hjälp hos Johny. Redan efter några behandlingar märkte jag stor förbättring. Hans kunskap och personliga engagemang gjorde hela skillnaden. Jag rekommenderar honom varmt!',
        name: 'Anna L.',
        job: 'Lärare, Enköping',
      },
      {
        title: 'Snabb lindring av nackspärr',
        testimonial:
          'Jag fick akut nackspärr och kunde knappt röra huvudet. Johny tog emot mig samma dag och efter behandlingen kunde jag röra mig fritt igen. Hans förklaringar om varför besvären uppstod hjälpte mig att förstå och förebygga framtida problem.',
        name: 'Erik M.',
        job: 'Entreprenör, Enköping',
      },
      {
        title: 'Återgång till träning efter knäskada',
        testimonial:
          'Efter en knäskada trodde jag aldrig att jag skulle kunna springa igen. Med Johnys rehabprogram och expertis har jag inte bara återgått till löpning utan också förbättrat min teknik. Hans engagemang och professionalism är enastående.',
        name: 'Maria K.',
        job: 'Löpcoach, Strängnäs',
      },
    ]}
    callToAction={{
      text: 'Boka din konsultation',
      href: '#booking',
      icon: 'tabler:calendar',
    }}
  />

  <!-- Features Widget *************** 

