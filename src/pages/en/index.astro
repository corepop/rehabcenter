---
export const prerender = true;

import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import PersonalIntroduction from '~/components/widgets/PersonalIntroduction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BookingIntegration from '~/components/widgets/BookingIntegration.astro';

const metadata = {
  title: 'Enköpings Rehabcenter — Personal care in naprapathy and physiotherapy in Enköping',
  description:
    'Welcome! My name is Johny Åhman, naprapath and licensed physiotherapist with over 35 years of experience. I offer personal and evidence-based treatment for pain and discomfort in back, neck, shoulders, knees, feet etc. Book an appointment easily online.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book appointment',
        href: '#booking',
        icon: 'tabler:calendar',
      },
      { text: 'Read more about me', href: '#om-mig' },
    ]}
    image={{ src: '~/assets/images/johny.webp', alt: 'Johny Åhman – Enköpings Rehabcenter' }}
  >
    <Fragment slot="title">
      Hi, my name is Johny Åhman – <span class="hidden xl:inline">naprapath and </span><span
        class="text-accent text-blue-600">licensed physiotherapist</span
      > in Enköping
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Emergency appointments available!</span>
      <span class="hidden sm:inline"
        ><span class="font-semibold">Welcome to Enköpings Rehabcenter.</span> I help you quickly with pain in back,
        neck, shoulders, knees and feet.</span
      >
      With over 35 years of experience, I combine naprapathy and physiotherapy to get you pain-free as quickly as possible.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="200kr:" description="County tax and Free card apply" />

  <!-- Personal Introduction Widget *** -->
  <PersonalIntroduction
    id="om-mig"
    title="Hi, my name is Johny"
    subtitle="Naprapath and licensed physiotherapist in Enköping"
    name="Johny Åhman"
    bio={`<p>I am passionate about helping people get back to a pain-free and active life. With over 35 years of experience, I offer personal, safe and evidence-based care.</p>
  <ul class="list-disc ml-5 mt-3 space-y-1">
    <li>OMT level 3 (orthopedic manual therapy)</li>
    <li>Special competence in shoulder, knee and foot problems</li>
    <li>Interest and experience in dizziness and headache</li>
  </ul>`}
    image={{
      src: '~/assets/images/johny.webp',
      alt: 'Johny Åhman',
    }}
  />

  <!-- Booking Integration Widget **** -->

  <BookingIntegration
    id="booking"
    height="700px"
    className="max-w-4xl mx-auto"
    title="Book appointment online"
    subtitle="Easy and fast - choose the time that suits you best"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BookingIntegration>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What my patients say"
    subtitle="Read about experiences from patients in Enköping who have been helped with their problems"
    testimonials={[
      {
        title: 'Fantastic help with back pain',
        testimonial:
          'After years of back pain that limited my daily life, I sought help from Johny. Already after a few treatments, I noticed a big improvement. His knowledge and personal commitment made all the difference. I recommend him warmly!',
        name: 'Anna L.',
        job: 'Teacher, Enköping',
      },
      {
        title: 'Quick relief from neck strain',
        testimonial:
          'I got acute neck strain and could barely move my head. Johny saw me the same day and after the treatment I could move freely again. His explanations about why the problems arose helped me understand and prevent future issues.',
        name: 'Erik M.',
        job: 'Entrepreneur, Enköping',
      },
      {
        title: 'Return to training after knee injury',
        testimonial:
          'After a knee injury, I never thought I would be able to run again. With Johny\'s rehab program and expertise, I have not only returned to running but also improved my technique. His commitment and professionalism are outstanding.',
        name: 'Maria K.',
        job: 'Running coach, Strängnäs',
      },
    ]}
    callToAction={{
      text: 'Book your consultation',
      href: '#booking',
      icon: 'tabler:calendar',
    }}
  />

  <!-- Features Widget *************** 

  <Features
    id="features"
    tagline="Features"
    title="Vad kan Enköpings Rehabcenter hjälpa dig med?"
    subtitle="One of the most professional and comprehensive templates currently on the market. Most starred & forked Astro theme in 2022, 2023 and 2024."
    items={[
      {
        title: 'Ryggsmärta/akut ryggont/ischias',
