---
export const prerender = true;

import Layout from '~/layouts/PageLayout.astro';
// import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <!--   <HeroText tagline="Contact" title="Let's Connect!" /> -->

  <ContactUs
    id="form"
    title="Kontakta Enköpings Rehabcenter"
    subtitle="Har du frågor om dina besvär eller vill boka tid? Kontakta oss gärna! Vi finns här för att hjälpa dig att må bättre."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Namn',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Meddelande',
    }}
    button="Skicka meddelande"
    description="Vi svarar vanligtvis inom 24 timmar under vardagar."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Kontakta oss"
    items={[
      {
        title: 'Telefon',
        description: '0171-123 45 67',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@enkopingsrehabcenter.se',
        icon: 'tabler:mail',
      },
      {
        title: 'Adress',
        description: 'Linbanegatan 12, 745 34 Enköping',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
