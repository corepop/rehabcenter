export async function getStaticPaths() {
  const treatments = ['ryggsmarta', 'nacksmarta', 'skuldror', 'eswt', 'knan', 'fotter', 'yrsel'];

  return treatments.map(treatment => ({
    params: { treatment },
    props: { locale: 'sv' }
  }));
}

