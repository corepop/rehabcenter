# WordPress headless CMS configuration
# Allow WordPress functionality but hide public site

# Block only the main WordPress site files that would expose the public site
RewriteEngine On
RewriteRule ^wordpress/index\.php$ /404 [R=404,L]
RewriteRule ^wordpress/$ /404 [R=404,L]

# Allow wp-admin and wp-login within wordpress directory
RewriteCond %{REQUEST_URI} !^/wordpress/wp-admin/
RewriteCond %{REQUEST_URI} !^/wordpress/wp-login\.php
RewriteCond %{REQUEST_URI} !^/wordpress/wp-includes/
RewriteCond %{REQUEST_URI} !^/wordpress/wp-content/
RewriteCond %{REQUEST_URI} !^/wordpress/wp-json/
